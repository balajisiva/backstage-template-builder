{
  "name": "root",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "18 || 20 || 22"
  },
  "scripts": {
    "dev": "yarn workspace @internal/plugin-backstage-template-builder start",
    "build": "backstage-cli repo build --all",
    "build:plugin": "yarn workspace @internal/plugin-backstage-template-builder build",
    "tsc": "tsc",
    "clean": "backstage-cli repo clean",
    "test": "backstage-cli repo test",
    "test:all": "backstage-cli repo test --coverage",
    "lint": "backstage-cli repo lint --since origin/main",
    "lint:all": "backstage-cli repo lint",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "export-dynamic": "yarn workspace @internal/plugin-backstage-template-builder export-dynamic"
  },
  "workspaces": {
    "packages": [
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@backstage/cli": "^0.26.0",
    "@spotify/prettier-config": "^15.0.0",
    "prettier": "^2.3.2",
    "typescript": "~5.3.0"
  },
  "resolutions": {
    "@types/react": "^18",
    "@types/react-dom": "^18"
  },
  "prettier": "@spotify/prettier-config",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
